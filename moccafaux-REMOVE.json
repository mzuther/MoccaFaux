{
  "probing-interval": 60,

  "monitor": [
    {
      "name":    "important-processes",
      "enabled": true,
      "command": "pgrep -af '^dpkg\\b|^pacman\\b|^dar\\s|^/\\S*rsync\\b|^ssh\\s|^unison\\S*'",

      "control-sleep": true,
      "control-dpms":  false
    },
    {
      "name":     "audio",
      "enabled":  true,
      "command":  "pactl list short sinks | grep -E '\\bRUNNING$'",

      "control-sleep": true,
      "control-dpms":  false
    },
    {
      "name":     "video",
      "enabled":  true,
      "command":  "pgrep -l '^(celluloid|skypeforlinux|vlc)$'",

      "control-sleep": true,
      "control-dpms":  true
    },
    {
      "name":     "zfs-scrub",
      "enabled":  true,
      "command":  "zpool status | grep -E '(resilver|scrub) in progress'",

      "control-sleep": true,
      "control-dpms":  false
    }
  ],

  "sleep-enable-cmd":  "xautolock -enable",
  "sleep-disable-cmd": "xautolock -disable",

  "dpms-enable-cmd":  "xset dpms 600 900 1200",
  "dpms-disable-cmd": "xset -dpms"
}
