{
  "probing-interval": 60,

  "monitor-processes":  true,
  "monitor-pulseaudio": true,
  "monitor-zfs-scrub":  true,

  "monitor-processes-regex": [
    "^dpkg\\b",
    "^pacman\\b",

    "^dar\\s",
    "^/\\S*rsync\\b",
    "^ssh\\s",
    "^unison\\S*"
  ],

  "dpms-enable":  "xset +dpms",
  "dpms-disable": "xset -dpms",

  "sleep-enable":  "xautolock -enable",
  "sleep-disable": "xautolock -disable"
}
